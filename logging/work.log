# Install
helm repo add grafana https://grafana.github.io/helm-charts
helm repo update

# helm pull grafana/loki --untar
# cp loki/values.yaml bokhanych-values.yaml

helm install --values bokhanych-values.yaml loki --create-namespace --namespace=logging grafana/loki

# Upgrade
helm upgrade --install loki grafana/loki -f bokhanych-values.yaml --create-namespace --namespace logging